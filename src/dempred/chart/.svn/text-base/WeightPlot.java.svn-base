package dempred.chart;

import java.awt.Color;

import org.jfree.chart.ChartFactory;
import org.jfree.chart.JFreeChart;
import org.jfree.chart.plot.PlotOrientation;
import org.jfree.chart.plot.XYPlot;
import org.jfree.chart.renderer.xy.XYBarRenderer;
import org.jfree.data.xy.XYSeries;
import org.jfree.data.xy.XYSeriesCollection;

import dempred.fmath.FVector;

public class WeightPlot {

	private String title;
	private FVector weights;

	public WeightPlot(String title, FVector weights) {
		super();
		this.title = title;
		this.weights = weights;
	}

	public JFreeChart generateChart() {
		XYSeries weightSeries = new XYSeries("classifier weights");
		for (int i = 0; i < weights.size(); ++i)
			weightSeries.add(i, weights.get(i));
		XYSeriesCollection data = new XYSeriesCollection();
		data.addSeries(weightSeries);
		JFreeChart chart = ChartFactory.createXYBarChart(title, "feature i", false, "classifier weight", data, PlotOrientation.VERTICAL, false, true, false);
		XYPlot plot = (XYPlot) chart.getPlot();
		plot.setBackgroundPaint(Color.white);
		plot.setDomainGridlinePaint(Color.lightGray);
		plot.setRangeGridlinePaint(Color.lightGray);
		XYBarRenderer renderer = (XYBarRenderer) plot.getRenderer();
		renderer.setDrawBarOutline(false);
		renderer.setShadowVisible(false);
		renderer.setSeriesPaint(0, Color.red);
		renderer.setSeriesFillPaint(0, Color.red);
		return chart;
	}
}
